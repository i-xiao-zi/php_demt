{
  "name": "pde",
  "displayName": "pde",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.103.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "default",
          "title": "PDE",
          "icon": "images/lnmp.svg"
        }
      ]
    },
    "commands": [
      {
        "command": "pde.helloWorld",
        "title": "Hello World",
        "icon": "$(history)"
      },
      {
        "command": "pde.editFile",
        "title": "编辑文件",
        "icon": "$(file)"
      },
      {
        "command": "pde.startMainTreeProvider",
        "title": "启动",
        "icon": "$(debug-start)"
      },
      {
        "command": "pde.stopMainTreeProvider",
        "title": "停止",
        "icon": "$(debug-stop)"
      },
      {
        "command": "pde.restartMainTreeProvider",
        "title": "重启",
        "icon": "$(debug-restart)"
      },
      {
        "command": "pde.startNginx",
        "title": "启动",
        "icon": "$(debug-start)"
      },
      {
        "command": "pde.stopNginx",
        "title": "停止",
        "icon": "$(debug-stop)"
      },
      {
        "command": "pde.restartNginx",
        "title": "重启",
        "icon": "$(debug-restart)"
      },
      {
        "command": "pde.startMysql",
        "title": "启动",
        "icon": "$(debug-start)"
      },
      {
        "command": "pde.stopMysql",
        "title": "停止",
        "icon": "$(debug-stop)"
      },
      {
        "command": "pde.restartMysql",
        "title": "重启",
        "icon": "$(debug-restart)"
      },
      {
        "command": "pde.switchPhpVersion",
        "title": "切换PHP版本",
        "icon": "$(arrow-swap)"
      },
      {
        "command": "pde.newNginxConfigFile",
        "title": "新建文件",
        "icon": "$(add)"
      },
      {
        "command": "pde.delNginxConfigFile",
        "title": "删除文件",
        "icon": "$(trash)"
      }
    ],
    "menus": {
      "view/title": [
				{
					"command": "pde.helloWorld",
					"when": "view == pde-header",
					"group": "navigation@0"
				},
				{
					"command": "pde.startMainTreeProvider",
					"when": "view == view-main",
					"group": "navigation@2"
				},
				{
					"command": "pde.stopMainTreeProvider",
					"when": "view == view-main",
					"group": "navigation@2"
				},
				{
					"command": "pde.restartMainTreeProvider",
					"when": "view == view-main",
					"group": "navigation@2"
				},
				{
					"command": "pde.newNginxConfigFile",
					"when": "view == view:nginx",
					"group": "navigation@2"
				},
				{
					"command": "pde.newFile",
					"when": "view == pde-header",
					"group": "navigation@2"
				}
      ],
      "view/item/context": [
        {
          "command": "pde.helloWorld",
          "when": "view == pde-header && viewItem == phpItem",
          "group": "inline@-2"
        },
        {
          "command": "pde.switchPhpVersion",
          "when": "view == view-main && viewItem == php",
          "group": "inline@-2"
        },
        {
          "command": "pde.switchPhpVersion",
          "when": "view == view-main && viewItem == php",
          "group": "inline@-2"
        },
        {
          "command": "pde.startNginx",
          "when": "view == view-main && viewItem == nginx",
          "group": "inline@1"
        },
        {
          "command": "pde.restartNginx",
          "when": "view == view-main && viewItem == nginx",
          "group": "inline@2"
        },
        {
          "command": "pde.stopNginx",
          "when": "view == view-main && viewItem == nginx",
          "group": "inline@3"
        },
        {
          "command": "pde.startMysql",
          "when": "view == view-main && viewItem == mysql",
          "group": "inline@1"
        },
        {
          "command": "pde.restartMysql",
          "when": "view == view-main && viewItem == mysql",
          "group": "inline@2"
        },
        {
          "command": "pde.stopMysql",
          "when": "view == view-main && viewItem == mysql",
          "group": "inline@3"
        },
        {
          "command": "pde.delNginxConfigFile",
          "when": "view == view:nginx",
          "group": "inline@-2"
        }
      ]
    },
    "views": {
      "default": [
        {
          "id": "view-main",
          "name": "php开发环境",
          "type": "tree",
          "icon": "images/lnmp.svg"
        },
        {
          "id": "view:nginx",
          "name": "Nginx配置",
          "type": "tree",
          "icon": "images/lnmp.svg"
        },
        {
          "id": "view:php",
          "name": "PHP配置",
          "type": "tree",
          "icon": "images/lnmp.svg"
        },
        {
          "id": "view:extension",
          "name": "$(folder) 扩展",
          "type": "tree",
          "icon": "$(folder)"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run package",
    "compile": "yarn run check-types && yarn run lint && node esbuild.js",
    "dev": "npm-run-all -p dev:esbuild dev:tsc",
    "dev:webview": "node esbuild.js --watch --webview",
    "dev:extension": "node esbuild.js --watch --extension",
    "dev:esbuild": "node esbuild.js --watch",
    "dev:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "yarn run check-types && yarn run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "yarn run compile-tests && yarn run compile && yarn run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.9",
    "@types/vscode": "^1.103.0",
    "@types/vscode-webview": "^1.57.5",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/webview-ui-toolkit": "^1.4.0",
    "esbuild": "^0.25.9",
    "eslint": "^9.34.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "react": "^19.1.1",
    "react-dom": "^19.1.1"
  }
}
